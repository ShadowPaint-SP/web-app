/* Write your global styles here, in PostCSS syntax */
@tailwind base;

* {
	scrollbar-width: none;
}

/* Chrome, Edge, and Safari */
*::-webkit-scrollbar {
	width: 15px;
}

*::-webkit-scrollbar-track {
	background: white;
	border-radius: 5px;
}

*::-webkit-scrollbar-thumb {
	background-color: base-300;
	border-radius: 14px;
	border: 3px solid white;
}

@tailwind components;
@tailwind utilities;
